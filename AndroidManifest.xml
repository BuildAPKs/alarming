<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.hlidskialf.android.alarmclock.beta"
        android:versionCode="1207"
        android:versionName="1.2.7">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application android:label="@string/app_label" android:icon="@drawable/alarming_beta">

        <activity android:name="com.hlidskialf.android.alarmclock.AlarmClockPreferences" android:label="@string/preferences">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>

        <provider android:name="com.hlidskialf.android.alarmclock.AlarmProvider" android:authorities="com.hlidskialf.android.alarmclock" />

        <activity android:name="com.hlidskialf.android.alarmclock.AlarmClock" android:label="@string/app_label">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.hlidskialf.android.alarmclock.SetAlarm" android:label="@string/set_alarm" />

        <activity android:name="com.hlidskialf.android.alarmclock.BigClock" 
                  android:screenOrientation="landscape" 
                  android:theme="@style/NoTitle_FullScreen" 
                  />

        <activity android:name="com.hlidskialf.android.alarmclock.AlarmAlert" android:label="@string/alert_title"
                android:excludeFromRecents="true"
                android:theme="@android:style/Theme.Dialog"
                android:launchMode="singleTask"
                android:taskAffinity=":AlarmAlert" />

        <activity android:name="com.hlidskialf.android.alarmclock.ClockPicker" />

        <receiver android:name="com.hlidskialf.android.alarmclock.AlarmReceiver">
            <intent-filter>
               <action android:name="com.hlidskialf.android.alarmclock.beta.ALARM_ALERT" />
            </intent-filter>
        </receiver>

        <receiver android:name="com.hlidskialf.android.alarmclock.AlarmInitReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>

